<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avantics.savingscalcpremium"
    android:versionCode="21"
    android:versionName="1.0.20">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/ic_action_bar"
        android:uiOptions="splitActionBarWhenNarrow"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.avantics.savingscalcpremium.activities.Main"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.avantics.savingscalc.common.activities.SettingsActivity"
            android:label="@string/pref_title" />

        <activity
            android:name="com.avantics.savingscalc.common.activities.SupportSettingsActivity"
            android:label="@string/pref_title" />

    </application>

</manifest>