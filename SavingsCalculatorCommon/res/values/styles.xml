<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
                Theme customizations available in newer API levels can go in
                res/values-vXX/styles.xml, while customizations related to
                backward-compatibility can go here.
            -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--<style name="standardFont" parent="@style/AppTheme">-->
    <!--<item name="android:typeface">sans</item>-->
    <!--<item name="android:textSize">14sp</item>-->
    <!--</style>-->

    <style name="standardLayout" parent="AppTheme"></style>

    <style name="valueLabel" parent="@style/standardLayout">
        <!--<item name="android:padding">5dp</item>-->
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:text">0.00</item>-->
    </style>

    <style name="totalLabel" parent="@style/valueLabel">
        <item name="android:gravity">center|center_vertical</item>
    </style>

    <style name="rightAlignLabel" parent="@style/valueLabel">
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="leftAlignLabel" parent="@style/valueLabel">
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="centerAlignLabel" parent="@style/valueLabel">
        <item name="android:gravity">center|center_vertical</item>
    </style>

    <style name="calcRowLabel" parent="@style/valueLabel">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="sectionHeaderLabel" parent="@style/standardLayout">
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="normalSavingLabel" parent="@style/valueLabel">
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="highlightedSavingLabel" parent="@style/standardLayout">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="listViewItemLabel" parent="@style/standardLayout">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="inputValue" parent="@style/standardLayout">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:text">0.00</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="currencyInput" parent="@style/inputValue">
    </style>

    <style name="percentageInput" parent="@style/inputValue">
    </style>

    <style name="linearLayoutRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="ruleSeparator">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="horizontalRule" parent="ruleSeparator">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="verticalRule" parent="ruleSeparator">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="underliningRule" parent="horizontalRule">
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:layout_marginRight">200dp</item>
    </style>

    <style name="listViewImageButton" parent="@android:style/Widget.ImageButton">
        <!--<item name="android:background">@drawable/your_own_graphic</item>-->
    </style>

</resources>