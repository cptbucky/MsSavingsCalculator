<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="match_parent"
	              android:orientation="vertical"
	              android:isScrollContainer="true">

		<LinearLayout
				style="@style/linearLayoutRow"
				android:layout_width="fill_parent"
				android:layout_height="37sp">

			<TextView
					style="@style/leftAlignLabel"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/cc_total"/>

			<TextView
					android:id="@+id/CCT"
					style="@style/centerAlignLabel"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textIsSelectable="true"/>
		</LinearLayout>

		<LinearLayout
				style="@style/linearLayoutRow"
				android:layout_width="fill_parent"
				android:layout_height="37sp">

			<TextView
					style="@style/leftAlignLabel"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/bc_total"/>

			<TextView
					android:id="@+id/BCT"
					style="@style/centerAlignLabel"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textIsSelectable="true"/>
		</LinearLayout>

		<LinearLayout
				style="@style/linearLayoutRow"
				android:layout_width="fill_parent"
				android:layout_height="37sp">

			<TextView
					style="@style/leftAlignLabel"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/dc_total"/>

			<TextView
					android:id="@+id/DCT"
					style="@style/centerAlignLabel"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textIsSelectable="true"/>
		</LinearLayout>

		<LinearLayout
				style="@style/linearLayoutRow"
				android:layout_width="fill_parent"
				android:layout_height="37sp">

			<TextView
					android:id="@+id/lblVendorTotal"
					style="@style/leftAlignLabel"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/vendor_statement_total"/>

			<TextView
					android:id="@+id/VendorTerminalTotal"
					style="@style/centerAlignLabel"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textIsSelectable="true"/>
		</LinearLayout>

		<LinearLayout
				style="@style/linearLayoutRow"
				android:layout_width="fill_parent"
				android:layout_height="37sp"
				android:layout_below="@+id/LinearLayout2">

			<TextView
					android:id="@+id/CSTLabel"
					style="@style/leftAlignLabel"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/client_statement_total"/>

			<TextView
					android:id="@+id/CSTotal"
					style="@style/centerAlignLabel"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textIsSelectable="true"/>
		</LinearLayout>

	</LinearLayout>

</ScrollView>
