<?xml version="1.0" encoding="utf-8" ?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              a:layout_width="fill_parent"
              a:layout_height="fill_parent"
              a:orientation="vertical"
              a:paddingLeft="20dp"
              a:paddingTop="20dp"
              a:paddingRight="20dp">

    <LinearLayout
            a:layout_width="fill_parent"
            a:layout_height="0dp"
            a:layout_weight="3"
            a:orientation="horizontal">

        <LinearLayout
                a:orientation="vertical"
                a:layout_width="0dp"
                a:layout_height="wrap_content"
                a:layout_weight="1">

            <TextView
                    a:layout_width="wrap_content"
                    a:layout_height="wrap_content"
                    a:text="@string/client_section_header"
                    a:id="@+id/textView"
                    style="@style/sectionHeaderLabel"/>

            <include
                    layout="@layout/quote_incumbent_headline"
                    a:layout_width="fill_parent"
                    a:layout_height="wrap_content"
                    a:layout_marginLeft="20dp"
                    a:layout_marginRight="20dp"/>

        </LinearLayout>

        <View
                style="@style/verticalRule"
                a:layout_width="1dp"
                a:layout_height="fill_parent"
                a:layout_marginBottom="0dp"/>

        <LinearLayout
                a:orientation="vertical"
                a:layout_width="0dp"
                a:layout_height="wrap_content"
                a:layout_weight="2">

            <TextView
                    a:layout_width="wrap_content"
                    a:layout_height="wrap_content"
                    a:text="@string/quote_calculation_section_heading"
                    a:id="@+id/vendorHeaderLabel"
                    style="@style/sectionHeaderLabel"/>

            <include
                    layout="@layout/quote_calculation"
                    a:layout_width="fill_parent"
                    a:layout_height="fill_parent"
                    a:layout_marginLeft="20dp"
                    a:layout_marginRight="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
            style="@style/horizontalRule"
            a:layout_width="fill_parent"
            a:layout_height="1dp"/>

    <fragment
            a:name="com.avantics.savingscalc.common.fragments.SavingsFragment"
            a:layout_width="fill_parent"
            a:layout_height="0dp"
            a:layout_weight="1"
            tools:layout="@layout/quote_savings"/>

</LinearLayout>

