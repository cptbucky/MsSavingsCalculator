<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

	<LinearLayout android:layout_width="fill_parent"
	              android:layout_height="wrap_content"
	              android:orientation="horizontal"
	              android:isScrollContainer="true">

		<TextView android:layout_width="wrap_content"
		          android:layout_height="fill_parent"
		          android:text="@string/savings_section_header"
		          android:id="@+id/textView" style="@style/sectionHeaderLabel" android:gravity="center_vertical"/>

		<LinearLayout android:layout_width="0dp"
		              android:layout_height="wrap_content"
		              android:layout_weight="1"
		              android:orientation="vertical"
		              android:isScrollContainer="true" android:layout_gravity="center_vertical" android:gravity="bottom"
		              android:id="@+id/oneMonthSavingContainer">

			<TextView
					android:id="@+id/Savings1Month"
					style="@style/leftAlignLabel"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textIsSelectable="true" android:gravity="center_horizontal"/>

			<TextView
					style="@style/leftAlignLabel"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/savings_month" android:gravity="center_horizontal"/>

		</LinearLayout>

		<LinearLayout android:layout_width="0dp"
		              android:layout_height="wrap_content"
		              android:layout_weight="1"
		              android:orientation="vertical"
		              android:isScrollContainer="true" android:gravity="bottom"
		              android:layout_gravity="center_vertical" android:id="@+id/oneYearSavingContainer">

			<TextView
					android:id="@+id/Savings1Year"
					style="@style/leftAlignLabel"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textIsSelectable="true" android:gravity="center_horizontal"/>

			<TextView
					style="@style/leftAlignLabel"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/saving_year" android:gravity="center_horizontal"/>

		</LinearLayout>

		<LinearLayout android:layout_width="0dp"
		              android:layout_height="wrap_content"
		              android:layout_weight="1"
		              android:orientation="vertical"
		              android:isScrollContainer="true" android:gravity="bottom"
		              android:layout_gravity="center_vertical" android:id="@+id/fourYearSavingContainer">

			<TextView
					android:id="@+id/Savings4Years"
					style="@style/leftAlignLabel"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textIsSelectable="true" android:gravity="center_horizontal"/>

			<TextView
					style="@style/leftAlignLabel"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="@string/saving_4years" android:gravity="center_horizontal"/>

		</LinearLayout>

		<LinearLayout android:layout_width="0dp"
		              android:layout_height="wrap_content"
		              android:layout_weight="1"
		              android:orientation="vertical"
		              android:isScrollContainer="true" android:gravity="bottom"
		              android:layout_gravity="center_vertical" android:id="@+id/savingPercentageContainer">

			<TextView
					android:id="@+id/savingsPercentage"
					style="@style/highlightedSavingLabel"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="37.78%"
					android:gravity="center_horizontal"/>

			<TextView
					style="@style/leftAlignLabel"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal" android:text="@string/saving_overall"/>

		</LinearLayout>

	</LinearLayout>

</ScrollView>
